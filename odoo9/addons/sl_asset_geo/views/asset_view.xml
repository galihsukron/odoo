<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- asset.location -->
      <record id="view_asset_form_map" model="ir.ui.view">
            <field name="name">asset.asset.form.geo</field>
            <field name="model">asset.asset</field>
            <field name="inherit_id" ref="sl_asset.asset_asset_form"/>
            <field name="arch" type="xml">
	            <data>
               		<xpath expr="//field[@name='log_location']" position="after">
                		<field name="latlng" widget="geo_box" geo="{'type':'Point','kind':'LatLng'}" />
            		</xpath>                     
	            </data>
            </field>
      </record>    	  
        
<!-- GeoEngine views -->
        <record id="ir_ui_view_assetasset_geo_view0" model="ir.ui.view">
            <field name="name">Asset Geo Engine view</field>
            <field name="model">asset.asset</field>
            <field name="arch" type="xml">
                <geo>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="image_small"/>
                    <field name="latlng" geo="{'type':'Point','kind':'LatLng'}"/>                    
                    <templates>
                        <tpl t-name="marker-popup">
                            <!-- <field name="image" widget='attachment_image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/> -->
                            <t t-if="record.image_small.raw_value">
                                <img t-att-src="geo_image('asset.asset', 'image_small', record.id.value)"/>
                            </t>
	                          <field name="name"/> <strong><field name="company_id"/></strong><br/>
                              <div class="oe_kanban_details">
									<strong class="oe_partner_heading"><field name="type_id"/></strong>                          
									(<field name="name"/>) 
                                     <ul class="fa-ul">
                                        <li>
                                            <t t-if="record.log_pic.raw_value"><i class="fa-li fa fa-male"/> <field name="log_pic"/></t>                                            
                                        </li>
                                        <li>
                                            <t t-if="record.log_date.raw_value"><i class="fa-li fa fa-clock-o"/> <field name="log_date"/></t>
                                        </li>
                                        <li>
                                            <t t-if="record.log_location.raw_value"><i class="fa-li fa fa-map-marker"/> <field name="log_location"/></t>
                                        </li>
                                    </ul>
                                </div>
                        </tpl>
                  </templates>
                </geo>
            </field>
            <field eval="16" name="priority"/>
        </record>
        
        <record id="sl_asset.asset_asset_act" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form,geo</field>
        </record>

    </data>
</openerp>
