<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

	   <record model="ir.ui.view" id="asset_geo_view_form">
            <field name="name">asset.geo.form</field>
            <field name="model">asset.geo</field>
            <field name="arch" type="xml">
                <form string="Asset GeoEnginge">
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                    <notebook>
                        <page string="Geometry">
                            <group col="4">
                                <field name="the_point" widget="geo_edit_map"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_geo_view_search">
            <field name="name">asset.geo.search</field>
            <field name="model">asset.geo</field>
            <field name="arch" type="xml">
                <tree string="Search Asset GeoEnginge">
                    <field name="name"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
<!-- GeoEngine views -->
        <record id="ir_ui_view_assetgeo_view0" model="ir.ui.view">
            <field name="name">Asset GeoEnginge view</field>
            <field name="model">asset.geo</field>
            <field name="arch" type="xml">
                <geoengine>
                    <field name="name" select="1"/>
                    <field name="state"/>
                </geoengine>
            </field>
            <field eval="16" name="priority"/>
        </record>
        
		<record id="vector_layer_assetgeo_point0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_geo.field_asset_geo_the_point"/>
            <field name="name">Asset GeoEngine Basic point</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_assetgeo_view0"/>
            <field name="geo_repr">basic</field>
            <field eval="1" name="nb_class"/>
            <field name="begin_color">#FF680A</field>
        </record>
        <!-- <record id="vector_layer_assetgeo_line0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_geo.asset_geo_the_line"/>
            <field name="name">Asset GeoEnginge Basic Line</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_assetgeo_view0"/>
            <field name="geo_repr">basic</field>
            <field eval="1" name="nb_class"/>
            <field name="begin_color">#FF680A</field>
        </record> -->
        <record id="geoengine_vector_layer_retailmachinestatecolored0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_geo.field_asset_geo_the_point"/>
            <field name="name">Asset GeoEngine State colored</field>
            <field name="classification">unique</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_assetgeo_view0"/>
            <field name="geo_repr">colored</field>
            <field eval="1" name="nb_class"/>
            <field name="attribute_field_id" ref="sl_asset_geo.field_asset_geo_state"/>
            <field name="begin_color">#FF680A</field>
        </record>        
        
        <record model="ir.ui.view" id="asset_geo_view_tree">
            <field name="name">asset.geo.tree</field>
            <field name="model">asset.geo</field>
            <field name="arch" type="xml">
                <tree string="Asset GeoEnginge">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="asset_geo_action" model="ir.actions.act_window">
            <field name="name">Asset GeoEngines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.geo</field>
            <field name="view_mode">tree,form,geoengine</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="asset_geo_view_tree"/>
        </record>
        <menuitem name="Asset-GeoEngine" id="geoengine_demo_menu" groups="base_geoengine.group_geoengine_user"
          web_icon="base_geoengine_demo,images/map.png" web_icon_hover="base_geoengine_demo,images/map-hover.png"/>
        <menuitem name="GeoEngine Samples" id="geoengine_demo_retail_menu" parent="geoengine_demo_menu" groups="base_geoengine.group_geoengine_user,base_geoengine.group_geoengine_admin"/>
        <menuitem name="Asset Geo" id="geoengine_retail_machine_menu" action="asset_geo_action" parent="geoengine_demo_retail_menu" groups="base_geoengine.group_geoengine_user,base_geoengine.group_geoengine_admin"/>


<!-- MENU TITIP -->
        <record id="asset_party_action" model="ir.actions.act_window">
            <field name="name">Asset Party</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.move.party</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <!-- <field name="view_id" ref="asset_geo_view_tree"/> -->
        </record>
        <menuitem name="Asset Party" id="geoengine_party_menu" action="asset_party_action" parent="geoengine_demo_retail_menu" groups="base_geoengine.group_geoengine_user,base_geoengine.group_geoengine_admin"/>
		
    </data>
</openerp>
