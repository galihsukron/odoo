<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <!-- Add menu entry in Settings/Email -->
        <menuitem name="SL Sync" id="menu_sync_sync" parent="base.menu_custom"  />
    
    
		<record model='ir.ui.view' id='sync_model_form'>
            <field name="name">sl.sync.model.form</field>
            <field name="model">sl.sync.model</field>
            <field name="arch" type="xml">
                <form string="Synchronized Model">
                    <sheet>
                        <group>       
                            <field name="model_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='sync_model_tree'>
            <field name="name">sl.sync.model.tree</field>
            <field name="model">sl.sync.model</field>
            <field name="arch" type="xml">
                <tree string="Synchronized Model" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="model_id" />
                    <field name="model" />
                    <field name="mode" />
                </tree>
            </field>
        </record>

        <record model='ir.ui.view' id='sync_model_search'>
            <field name="name">sl.sync.model.search</field>
            <field name="model">sl.sync.model</field>
            <field name="arch" type="xml">
                <search string="Synchronized Model" >
                    <field name="model_id" />
                </search>
            </field>
        </record>

        <!-- record model="ir.ui.view" id="tracking_item_step_graph">
           <field name="name">sl.sync.model.graph</field>
           <field name="model">sl.sync.model</field>
           <field name="arch" type="xml">
                <graph string="Step Values Per Item">
                    <field name="asset_id" type="row"/>
                    <field name="pic_uid" type="measure"/>
                </graph>
            </field>
        </record-->

        <record model='ir.actions.act_window' id='sync_model_act'>
            <field name="name">Synchronized Model</field>
            <field name="res_model">sl.sync.model</field>
            <field name="view_type">form</field>
            <!-- field name="view_mode">tree,graph</field-->
            <field name="view_mode">tree</field>
            <!-- <field name="context">{"search_default_groupby_item" : True}</field> -->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new step log.
              </p>
              <p>
                Here you can add various step entries for all items.
                You can also show step value for a particular item using
                the search field.
              </p>
            </field>
        </record>

        <menuitem action="sync_model_act" parent="menu_sync_sync" id="menu_sync_model"/>

        
		
    </data>
</openerp>
