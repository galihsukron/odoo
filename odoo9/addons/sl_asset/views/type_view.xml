<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

 <!-- asset.type -->
        <record id="view_type_form" model="ir.ui.view">
            <field name="name">asset.type.form</field>
            <field name="model">asset.type</field>
            <field name="arch" type="xml">
                <form string="type">
                    <sheet>
	                   <div class="oe_title">
	                        <label for="name" class="oe_edit_only"/> 
	                        <h1>
	                           <field name="name" class="oe_inline" />
	                       </h1>
	                        <label for="parent_id" class="oe_edit_only"/>
	                       <h2>
	                           <field name="parent_id" class="oe_inline"/>
	                       </h2>
	                   </div>
                    

					<group col="2">
						<group id="left_panel" col="1">
							<group string="Attributes">
<!-- 	                       <label for="tag_ids" class="oe_edit_only"/>
	                       <field name="tag_ids" widget="many2many_tags" />
 -->                             
                            <!--field name="manager_id"/-->
                            </group>
                        </group>
                        
                        <group id="right_panel" col="1">
						    <group id="additional_info" string="Additional Info">
                        	</group>
                        </group>
					</group>

                        <field name="child_ids">
							<tree editable="bottom" string="Children Types">
								<field name="name"/>
							</tree>
						</field>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_type_tree" model="ir.ui.view">
            <field name="name">asset.type.tree</field>
            <field name="model">asset.type</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Asset Types">
                    <field name="name"/>
                    <!--field name="manager_id"/-->
                </tree>
            </field>
        </record>
        <record id="view_type_filter" model="ir.ui.view">
            <field name="name">Asset Types</field>
            <field name="model">asset.type</field>
            <field name="arch" type="xml">
                <search string="types">
                    <field name="name" string="type"/>
                    <!--field name="manager_id" /-->
                </search>
             </field>
        </record>
        <record id="open_module_tree_type" model="ir.actions.act_window">
            <field name="name">Asset Types</field>
            <field name="res_model">asset.type</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_type_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create an asset type.
              </p><p>
                Odoo's type structure is used to manage all documents
                related to employees by types: expenses, timesheets,
                leaves and holidays, recruitments, etc.
              </p>
            </field>
        </record>
       <menuitem action="open_module_tree_type" id="menu_asset_type_tree" parent="menu_asset_configuration" sequence="5"/>


<!-- ASET TYPE -->
        <record id="assettype_hierarchy_view" model="ir.ui.view">
            <field name="name">asset.type.hierarchy</field>
            <field name="model">asset.type</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Asset Type">
                    <field name="name"/>
					 <!--                 
                    <field name="sequence" invisible="1"/>
                    <field name="product_id"/>
                    <field name="product_uom" options="{'no_open':True,'no_create':True}" groups="product.group_uom"/>
                    <field name="routing_id" groups="mrp.group_mrp_routings"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                     -->
                </tree>
            </field>
        </record>
		<record id="act_assettype_hierarchy" model="ir.actions.act_window">
            <field name="name">Asset Type (Structure)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.type</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="assettype_hierarchy_view"/>
            <field name="view_type">tree</field>
        </record>
        
       <menuitem action="act_assettype_hierarchy" id="menu_asset_type_hierarchy" parent="menu_asset_configuration" sequence="6"/>
        
    </data>
</openerp>
