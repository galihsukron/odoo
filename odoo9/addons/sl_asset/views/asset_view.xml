<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

	<record model='ir.ui.view' id='asset_asset_form'>
       <field name="name">asset.asset.form</field>
       <field name="model">asset.asset</field>
       <field name="arch" type="xml">
           <form string="Assets">
               <header>
               <!-- field name="state_id"  widget="statusbar" clickable="True" /-->
                <!--field name="current_step" widget="step_bar" context="{'no_sequence':True}"/-->
                <!-- <field name="log_completed" invisible="1"/> -->
