                    <!-- <field name="current_step"  widget="statusbar"/> -->
<!--                     <button class="oe_highlight" name="act_done" type="object" string="Done" help="Set this step as done"/> -->
                   
               </header>
               <sheet>
               		<div class="oe_right oe_button_box">
                       <button name="return_action_to_open"
                           type="object"
                           class="oe_stat_button"
                           icon="fa-fast-forward"
                           context="{'xml_id':'asset_movement_act'}"
                           help="show the historical movement for this asset" >
                           <!-- <field name="current_progress" widget="statinfo"/> -->
                       </button>
                   </div>
               		<field name="state" invisible="1"/>
<!--                    <field name="art_id" widget='many2one_fa' class="oe_left oe_avatar fa-size3"/> -->
                   <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                   <div class="oe_title">

                        <label for="name" class="oe_edit_only"/>
                       <h1>
                           <field name="name" class="oe_inline"/>
                       </h1>
                        <label for="type_id" class="oe_edit_only"/> 
                        <h3>
                           <field name="type_id" class="oe_inline"/>
                       </h3>
                       
                       
                       <label for="tag_ids" class="oe_edit_only"/>
                       <field name="tag_ids" widget="many2many_tags" />
                   </div>
                   
                   
                   <group col="2">
                       <group id="left_panel" col="1">
	                       <group  string="Position" attrs="{'invisible': [('state', '=', 'new')]}">
	                           <!-- field name="current_step" /-->                           
<!-- 	                           <label for="asset_move_id"/> -->
<!-- 	                           <span>                                     -->
<!-- 	                            <field name="current_activity" class="oe_inline"/> -->
<!-- 							        <field name="log_id" class="oe_inline" on_change="on_change_step(log_id)" context="{'target':'log_activity'}"/> <br/> -->
<!-- 							        <field name="log_activity" class="oe_inline"/> <br/> -->
<!-- 							        <field name="prior_log_note" widget="text"/>	 -->
							                                    
<!-- 	                           </span> -->
	                           <field name="log_pic"/>
	                           <field name="log_date"/>
	                           <field name="log_location"/>
	                           <!-- <field name="log_state"/> -->
	                  		</group>

							<group string="Attributes">
								<!-- <field name="location"/> -->
							    <field name="company_id" groups="base.group_multi_company"/>
							    <!-- field name="pic_uid" /-->                                
							    <field name="dummies" invisible="1"/>
							</group>
						</group>

                        <group id="right_panel" col="1">
						    <group id="additional_info" string="Additional Info">
<!-- 						        <label for="location_id"/> -->
<!-- 						        <span>                                    	                                 -->
<!-- 							        <field name="location_id" class="oe_inline"/> <br/> -->
<!-- 								</span>							         -->
						    </group>
					    </group>
                    </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>
        <record model='ir.ui.view' id='asset_asset_tree'>
            <field name="name">asset.asset.tree</field>
            <field name="model">asset.asset</field>
            <field name="arch" type="xml">
                <tree string="Assets">
                	<!-- <field name="art_id" invisible="1"/> -->                    
                	<field name="name" widget="char_fa" options="{'icon_fa':'art_id'}"/>
                    <field name="type_id"/>
					
                    <!-- <field name="location_id"/> -->
					<!-- <field name="log_id" /> -->
                    <!-- <field name="log_pic"/> -->
                    <field name="log_location"/>
                    <field name="log_date"/>
                    <field name="log_pic"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_asset_search">
            <field name="name">asset.asset.search</field>
            <field name="model">asset.asset</field>
            <field name="arch" type="xml">
                <search string="Search Asset">
                    <field name="name" filter_domain="[('name','ilike',self)]" />
                    <field name="type_id" filter_domain="[('type_id','ilike',self)]" />
<!--                     <filter name="app" string="Apps" domain="[('application', '=', 1)]"/> -->
<!--                     <field name="tag_ids"/> -->
                    <field name="tag_ids" string="Tag" filter_domain="[('tag_ids','ilike', self)]"/>
                    <field name="log_location"/>
                    <field name="log_pic"/>
                    <!-- <field name="location_id"/> -->
<!--                     <field name="log_pic"/>
                    <field name="log_state"/>
                    <field name="flow_id"/>
 -->                    <group expand="1" string="Group By">
                        <filter name="groupby_location" context="{'group_by' : 'log_location'}" string="Location"/>
                        <filter name="groupby_pic" context="{'group_by' : 'log_pic'}" string="PIC"/>
                        <filter name="groupby_type" context="{'group_by' : 'type_id'}" string="Asset Type"/>
                        <!-- <filter name="groupby_flow" context="{'group_by' : 'flow_id'}" string="Flow"/> -->
                    </group>
               </search>
            </field>
        </record>


