        <record model='ir.actions.act_window' id='asset_asset_act'>
            <field name="name">Assets</field>
            <field name="res_model">asset.asset</field>
            <field name="view_type">form</field>
            <!-- <field name="domain">[('log_state', '=', 'open')]</field> -->
            <field name="context">{
              'default_model': 'res.users',
              'default_res_id': uid,
              'thread_model': 'res.partner',
              'search_default_message_unread': True,
              'needaction_menu_ref': ['sl_asset.mail_tomefeeds']
            }</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new item.
              </p><p>
                You will be able to manage your tracking by keeping track of the
                contracts, services, fixed and recurring costs, odometers and
                fuel logs associated to each item.
            </p><p>
                Odoo will warn you when services or contract have to be
                renewed.
              </p>
            </field>
        </record>

        <menuitem action="asset_asset_act" parent="menu_asset" id="menu_asset_asset" groups="group_asset_user"/>

