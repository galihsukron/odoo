<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

	   <record model="ir.ui.view" id="asset_move_party_view_form">
            <field name="name">asset.move.party.form</field>
            <field name="model">asset.move.party</field>
            <field name="arch" type="xml">
                <form string="Asset Party">
                    <group>
                        <field name="date"/>
                        <field name="asset_found"/>
                    </group>
                    <group string="Asset">
                       	<field name="move_ids">
                       		<tree editable="bottom">
                       			<field name="asset_id"/>
                       			<field name="asset_type"/>
                       		</tree>
                       	</field>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="asset_move_party_view_search">
            <field name="name">asset.move.party.search</field>
            <field name="model">asset.move.party</field>
            <field name="arch" type="xml">
                <tree string="Search Asset Party">
                    <field name="date"/>					                    
                </tree>
            </field>
        </record>
                       
        <record model="ir.ui.view" id="asset_move_party_view_tree">
            <field name="name">asset.move.party.tree</field>
            <field name="model">asset.move.party</field>
            <field name="arch" type="xml">
                <tree string="Asset Party">
                    <field name="date"/>
                    <field name="asset_found"/>
                    
                </tree>
            </field>
        </record>
        
        <record id="asset_move_party_action" model="ir.actions.act_window">
            <field name="name">Asset Party</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.move.party</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="asset_move_party_view_tree"/>
        </record>

        <!-- <menuitem name="Asset Party non-Geo" id="geoengine_retail_machine_menu" action="asset_move_party_action" parent="geoengine_demo_retail_menu" groups="base_geoengine.group_geoengine_user,base_geoengine.group_geoengine_admin"/> -->
		
    </data>
</openerp>
