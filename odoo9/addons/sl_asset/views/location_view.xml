<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

 <!-- asset.location -->
        <record id="view_location_form" model="ir.ui.view">
            <field name="name">asset.location.form</field>
            <field name="model">asset.location</field>
            <field name="arch" type="xml">
                <form string="location">
                    <sheet>
                    	<field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
						<div class="oe_title">
						     <label for="name" class="oe_edit_only"/> 
						     <h1>
						        <field name="name" class="oe_inline" />
						    </h1>
						     <label for="parent_id" class="oe_edit_only"/>
						    <h3>
						        <field name="parent_id" class="oe_inline"/>
						    </h3>
						</div>
                    
						<group col="2">
							<group id="left_panel" col="1">
								<group string="Attributes">
	<!-- 	                       <label for="tag_ids" class="oe_edit_only"/>
		                       <field name="tag_ids" widget="many2many_tags" />-->
	                            <field name="latitude"/>
	                            <field name="longitude"/>
	                            <!--field name="manager_id"/-->
	                            </group>
	                        </group>
	                        
	                        <group id="right_panel" col="1">
							    <group id="additional_info" string="Additional Info">
	                            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
	                        	</group>
	                        </group>
						</group>
                        <field name="child_ids">
							<tree editable="bottom">
								<field name="name"/>
							</tree>
						</field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_location_tree" model="ir.ui.view">
            <field name="name">asset.location.tree</field>
            <field name="model">asset.location</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Companies">
                    <field name="complete_name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <!--field name="manager_id"/-->
                </tree>
            </field>
        </record>
        <record id="view_location_filter" model="ir.ui.view">
            <field name="name">Locations</field>
            <field name="model">asset.location</field>
            <field name="arch" type="xml">
                <search string="locations">
                    <field name="name" string="location"/>
                    <!--field name="manager_id" /-->
                </search>
             </field>
        </record>
        <record id="location_asset_act" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">asset.location</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_location_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a location.
              </p><p>
                Odoo's location structure is used to manage all documents
                related to employees by locations: expenses, timesheets,
                leaves and holidays, recruitments, etc.
              </p>
            </field>
        </record>
       <menuitem action="location_asset_act" id="menu_asset_location_tree" parent="menu_asset_configuration" sequence="5"/>

    </data>
</openerp>
