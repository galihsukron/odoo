<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record model='ir.ui.view' id='tracking_item_step_form'>
            <field name="name">asset.move.form</field>
            <field name="model">asset.move</field>
            <field name="arch" type="xml">
                <form string="Asset Movement">
                    <sheet>
	                    <group>
	                    	<field name="asset_id"/>
	                    	<field name="pic_partner"/>
	                        <field name="location_id"/>
	                        <field name="date" />
	                        <field name="latitude" />
	                        <field name="longitude" />
	                    </group>



<!--                         <group> -->
<!--                         	<field name="asset_id" on_change="on_change_item(asset_id)"/> -->
<!--                                 <div> -->
<!--                                     <field name="pic_partner" class="oe_inline"/> -->
<!--                                     <field name="location_id" class="oe_inline"/> -->
<!--                                 </div> -->
<!--                             <field name="date" /> -->
<!--                             <field name="latitude" /> -->
<!--                             <field name="longitude" /> -->
<!--                         </group> -->
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='tracking_item_step_tree'>
            <field name="name">asset.move.tree</field>
            <field name="model">asset.move</field>
            <field name="arch" type="xml">
                <tree string="Step Logs" editable="top">
                    <field name="date" />
                    <field name="asset_id" on_change="on_change_item(asset_id)"/>
                    <field name="location_id"/>
                    <field name="latitude" />
                    <field name="longitude" />
                    <field name="pic_partner" />
                </tree>
            </field>
        </record>

        <record model='ir.ui.view' id='tracking_item_step_search'>
            <field name="name">asset.move.search</field>
            <field name="model">asset.move</field>
            <field name="arch" type="xml">
                <search string="Items steps" >
                    <field name="asset_id" />
                    <field name="pic_partner"/>
                    <field name="location_id"/>
                    <field name="date"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_item" context="{'group_by' : 'asset_id'}" string="Asset"/>
<!--                         <filter name="groupby_flow" context="{'group_by' : 'flow_id'}" string="Flow"/> -->
                    </group>
                </search>
            </field>
        </record>

        <!-- record model="ir.ui.view" id="tracking_item_step_graph">
           <field name="name">asset.move.graph</field>
           <field name="model">asset.move</field>
           <field name="arch" type="xml">
                <graph string="Step Values Per Item">
                    <field name="asset_id" type="row"/>
                    <field name="pic_uid" type="measure"/>
                </graph>
            </field>
        </record-->

        <record model='ir.actions.act_window' id='asset_movement_act'>
            <field name="name">Asset Movement</field>
            <field name="res_model">asset.move</field>
            <field name="view_type">form</field>
            <!-- field name="view_mode">tree,graph</field-->
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_groupby_item" : True}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new step log.
              </p>
              <p>
                Here you can add various step entries for all items.
                You can also show step value for a particular item using
                the search field.
              </p>
            </field>
        </record>

        <menuitem action="asset_movement_act" parent="menu_asset" id="menu_asset_move" groups="group_asset_user"/>

        
		
    </data>
</openerp>
