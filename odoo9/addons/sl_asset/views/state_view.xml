<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- ITEM STATE -->
        <record model='ir.ui.view' id='asset_asset_state_tree'>
            <field name="name">asset.state.tree</field>
            <field name="model">asset.state</field>
            <field name="arch" type="xml">
                <tree string="State" editable="bottom">
                    <field name="sequence" widget="handler" invisible="1"/>
                    <field name="perspective" />
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record model='ir.actions.act_window' id='asset_state_act'>
            <field name="name">Asset State</field>
            <field name="res_model">asset.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a tracking status.
              </p><p>
                You can customize available status to track the evolution of
                each vehicule. Example: Active, Being Repaired, Sold.
              </p>
            </field>
        </record>
        
        <menuitem action="asset_state_act" parent="menu_asset_configuration" id="menu_asset_state" groups="group_asset_manager"/>

        
		
    </data>
</openerp>
