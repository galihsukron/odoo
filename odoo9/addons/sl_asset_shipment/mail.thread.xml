<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Requests Links -->
        <record id="req_link_shipment" model="res.request.link">
            <field name="name">Tracking Shipment</field>
            <field name="object">asset.shipment</field>
        </record>


        <!-- Task-related subtypes for messaging / Chatter -->
        <record id="mt_shipment_new" model="mail.message.subtype">
            <field name="name">New Shipment Created</field>
            <field name="res_model">asset.shipment</field>
            <field name="default" eval="False"/>
            <field name="hidden" eval="True"/>
            <field name="description">New Shipment was created</field>
        </record>

        <record id="mt_shipment_statechanged" model="mail.message.subtype">
            <field name="name">Shipment Changed</field>
            <field name="res_model">asset.shipment</field>
            <field name="default" eval="False"/>
            <field name="description">Shipment changed</field>
        </record>
		
		
		 <record id="mt_project_task_assigned" model="mail.message.subtype">
            <field name="name">Task Assigned</field>
            <field name="sequence">11</field>
            <field name="res_model">asset.shipment</field>
            <field name="default" eval="False"/>
            <field name="parent_id" eval="ref('mt_shipment_statechanged')"/>
           <!--  <field name="relation_field">project_id</field> -->
        </record>
    </data>
</openerp>
