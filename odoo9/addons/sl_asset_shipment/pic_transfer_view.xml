<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
<!-- ir model PIC Transfer -->
	<record id="view_asset_pictransfers_form" model="ir.ui.view">
		<field name="model">asset.move.party</field>
		<field name="arch" type="xml">
			<form string="PIC Transfer">
				<header>
                   	<field name="state" widget="statusbar" statusbar_visible="draft,confirming,signing,completed"/>
					<!-- SHIPMENT -->
					<!-- <button string="Confirm Delivering" name="action_delivering" states="draft" type="object" class="btn-primary"/> -->
					
					
               </header>
			
			  <sheet>	
			  		  	
                <group>
					<group>			
						<field name="date"/>			
						<field name="from_partner_id"/>
						<field name="to_partner_id"/>
						<field name="location_id"/>
						
						
						<!-- <field name="shipment_id"/> -->
						<label for="shipment_id"/>
						<span>                                    
							<field name="shipment_id" class="oe_inline"/> 
							<button string="Update Asset List by Shipment" 
								attrs="{'invisible':[('shipment_id','=',False)]}" name="action_sync_asset_list" type="object" class="btn-primary"/>								                                    
						</span>
						
						<field name="origin_loc_id"/>
						<field name="destination_loc_id"/>

						<field name="asset_planned"/>
						
								
					</group>
				
					<group>											
						<field name="note"/>
					</group>
				</group>
				
						<field name="move_ids">
							<tree editable="bottom">
								<field name="asset_id"/>
						   		<field name="asset_type"/>
						   		<field name="image_small" widget="image" height="54"/>
						   		<field name="state" required="1"/>
							</tree>
						</field>
		<group>
		  <field name="asset_equal"/>
		  <field name="asset_missing"/>
		  <field name="asset_added"/>
		  <field name="asset_total"/>
	  	</group>
	  
	  <!-- HANDOVER -->
					<!-- <button string="New Handover" name="action_new_handover" type="object" class="btn-primary"
						attrs="{'invisible':['|',('party_state','!=','done'),('state','!=','delivering')]}"/> -->
					<button string="Confirm Asset Condition" name="action_lock_asset" type="object" class="btn-primary"
						states="draft"/>
						
					<button string="Sender Approval" name="action_handover_sent" type="object" class="btn-primary"  
						states="confirming"/>
					<!-- <button string="Sender Approval" class="btn-primary"
						attrs="{'invisible':[('state','=', 'confirming')]}" /> -->
						
					<button string="Recepient Approval" name="action_handover_received" type="object" class="btn-primary" 
						states="signing"/>
					
					
					<!-- <button string="PIC Transfer Done" name="action_done" type="object" class="btn-primary"/> -->
					
	  
	  
	</sheet>
  	<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
  </form>
 </field>
</record>
        <record id="view_asset_pictransfers_tree" model="ir.ui.view">
            <field name="model">asset.move.party</field>
            <field name="arch" type="xml">
                <tree string="PIC Transfer">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="shipment_id"/>
                    <field name="origin_loc_id"/>
                    <field name="destination_loc_id"/>
                    <field name="location_id" string="Last Position"/>
                    <field name="state"/>
                    <field name="pic_partner" string="Last PIC" help="Person in charge"/>
                </tree>
            </field>
        </record>
        <record id="view_asset_pictransfers_search" model="ir.ui.view">
            <field name="model">asset.move.party</field>
            <field name="arch" type="xml">
                <search string="PIC Transfer">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <field name="date"/>
                    <field name="shipment_id"/>
                    <field name="origin_loc_id"/>
                    <field name="destination_loc_id"/>
                    <field name="location_id" string="Last Position"/>
                    <field name="state"/>
                    <field name="pic_partner" string="Last PIC"/>
                  <!--   <filter icon="terp-gnome-cpu-frequency-applet+"
                        string="Required"
                        domain="[('required', '=', True)]"/>
                    <separator/>
                    <filter icon="terp-dialog-close"
                        string="Readonly"
                        domain="[('readonly', '=', True)]"/>
                    <separator/>
                    <filter 
                        string="Custom"
                        domain="[('state', '=', 'manual')]"/>
                    <filter 
                        string="Base"
                        domain="[('state', '=', 'base')]"/>
                    <separator/>
                    <filter icon="terp-translate"
                        string="Translate"
                        domain="[('translate', '=', True)]"/>
                    <field name="model_id"/>
                    <field name="ttype"/>
                    <field name="required"/>
                    <field name="readonly"/>
                    <group expand="0" string="Group By">
                        <filter string="Object" icon="terp-stock_align_left_24" domain="[]" context="{'group_by':'model_id'}"/>
                    </group> -->
                    <group expand="1" string="Group By">
                        <!-- <filter string="Object" icon="terp-stock_align_left_24" domain="[]" context="{'group_by':'model_id'}"/> -->
                        <filter string="Shipment" context="{'group_by':'shipment_id'}"/>
                        <filter string="Origin" icon="terp-stock_align_left_24" context="{'group_by':'origin_loc_id'}"/>
                        <filter string="Destination" icon="terp-stock_align_left_24" context="{'group_by':'destination_loc_id'}"/>
                        <filter string="Last Position" context="{'group_by':'location_id'}"/>
                        <filter string="State" context="{'group_by':'state'}"/>
                        <filter string="Last PIC" context="{'group_by':'pic_partner'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_asset_pictransfers" model="ir.actions.act_window">
            <field name="name">PIC Transfer</field>
            <field name="res_model">asset.move.party</field>
            <field name="view_type">form</field>
            <!-- <field name="context">{'manual':True}</field> -->
            <field name="view_id" ref="view_asset_pictransfers_tree"/>
        </record>
        <menuitem action="action_asset_pictransfers" id="ir_model_asset_pictransfers" parent="sl_asset.menu_asset" sequence="2"/>

	
	
		
    </data>
</openerp>
