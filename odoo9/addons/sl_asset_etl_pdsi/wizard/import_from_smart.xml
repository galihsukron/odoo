<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_wizard_importfromsmart" model="ir.ui.view">
            <field name="name">Update the current value of the Goal</field>
            <field name="model">wizard.asset.importfromsmart</field>
            <field name="arch" type="xml">
                <form string="Grant Badge To">
                    Set the current value you have reached for this goal
                    <group>
                        
                        <field name="asset" widget="radio"/>
                        <field name="assettype" widget="radio"/>
                        <field name="assetlocation" widget="radio"/>
                    </group>
                    <footer>
                        <button string="Import" type="object" name="action_update_current" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

		<record id="action_account_analytic_chart" model="ir.actions.act_window">
            <field name="name">Import from PDSI/Smart</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.asset.importfromsmart</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_importfromsmart"/>
            <field name="target">new</field>
        </record>
        
		<menuitem id="menu_wizard_importfromsmart" parent="sl_asset.menu_asset_maintenance" action="action_account_analytic_chart" sequence="20"/>
		
    </data>
</openerp>
