<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	
        
        <record id="pdsi_view_config_settings" model="ir.ui.view">
            <field name="name">asset settings</field>
            <field name="model">asset.config.settings</field>
	        <field name="inherit_id" ref="sl_asset.view_config_settings"/>       
            <field name="arch" type="xml">
		       	<xpath expr="//group[@id='etl']" position="inside">
		       		
       	            <label for="pdsi_import_source"/>
                          <div class="o_address_format">
                          	  <field name="pdsi_import_source"  class="oe_inline"  widget="radio"/>	
                              <field attrs="{'invisible': [('pdsi_import_source','=', False)]}" name="pdsi_import_dbserver" placeholder="DB Server" class="o_address_street"/>
                              <field attrs="{'invisible': [('pdsi_import_source','=', False)]}" name="pdsi_import_dbname" placeholder="DB Name" class="o_address_street"/>
                              <field attrs="{'invisible': [('pdsi_import_source','=', False)]}" name="pdsi_import_dbuser" placeholder="DB User" class="o_address_street"/>
                              <field attrs="{'invisible': [('pdsi_import_source','=', False)]}" name="pdsi_import_dbpassword" placeholder="DB Password"  password="True" class="o_address_street"/>
                          </div>
		      	</xpath>
            </field>
        </record>

        
    </data>
</openerp>
