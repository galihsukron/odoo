<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
       <record id="ir_ui_view_assetasset_view0" model="ir.ui.view">
            <field name="name">Modules in box</field>
            <field name="model">ir.module.module</field>
            <field name="arch" type="xml">
                <box>
                    <field name="shortdesc"/>
                    <field name="name" groups="base.group_no_one"/>
                    <field name="author"/>
                    <field name="installed_version"/>
                    <field name="state"/>
                    <field name="category_id"/>
                    <field name="license"/>
                </box>
            </field>            
        </record>
    
       <record id="ir_ui_view_module_circle_view0" model="ir.ui.view">
            <field name="name">Modules in box</field>
            <field name="model">ir.module.module</field>
            <field name="field_parent">dependencies_id</field>
            <field name="arch" type="xml">
                <circle>
                	<field name="dependencies_id"/>
                    <field name="shortdesc"/>
                    <field name="name" groups="base.group_no_one"/>
                    <field name="author"/>
                    <field name="installed_version"/>
                    <field name="state"/>
                    <field name="category_id"/>
                    <field name="application"/>
                    <field name="license"/>
                </circle>
            </field>            
        </record>
        
        <record id="base.open_module_tree" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form,box,circle</field>
        </record>
	</data>
</openerp>        	    
