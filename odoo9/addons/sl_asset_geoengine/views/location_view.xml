<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

 <!-- asset.location -->
        <record id="view_location_form_map" model="ir.ui.view">
            <field name="name">asset.location.form</field>
            <field name="model">asset.location</field>
            <field name="inherit_id" ref="sl_asset.view_location_form"/>
            <field name="arch" type="xml">
	            <data>
	            	<xpath expr="//field[@name='latitude']" position="attributes">
                		<attribute name="invisible">True</attribute>
            		</xpath>
	            	<xpath expr="//field[@name='longitude']" position="attributes">
                		<attribute name="invisible">True</attribute>
            		</xpath>
	               <xpath expr="//field[@name='child_ids']" position="before">
	               		<group>
	               		<field name="the_point" widget="geo_edit_map"/>
	               		</group>
               		</xpath>                            
	            </data>
            </field>
        </record>   
        
<!-- GeoEngine views -->
        <record id="ir_ui_view_asset_location_view0" model="ir.ui.view">
            <field name="name">Asset Location Spatial view</field>
            <field name="model">asset.location</field>
            <field name="arch" type="xml">
                <geoengine>
                    <field name="name" select="1"/>
                    <field name="company_id"/>
                    
                    
                </geoengine>
            </field>
            <field eval="16" name="priority"/>
        </record>
        
		<record id="vector_layer_asset_location_point0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_geoengine.field_asset_location_the_point"/>
            <field name="name">Asset Location Spatial Basic point</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_asset_location_view0"/>
            <field name="geo_repr">basic</field>
            <field eval="1" name="nb_class"/>
            <field name="begin_color">#FF680A</field>
        </record>
        <!-- <record id="vector_layer_asset_location_line0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_asset.location_asset_the_line"/>
            <field name="name">Asset GeoEngine Basic Line</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_asset_location_view0"/>
            <field name="geo_repr">basic</field>
            <field eval="1" name="nb_class"/>
            <field name="begin_color">#FF680A</field>
        </record> -->
        <record id="vector_layer_asset_locationstatecolored0" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="sl_asset_geoengine.field_asset_location_the_point"/>
            <field name="name">Asset Location Spatial State colored</field>
            <field name="classification">unique</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_asset_location_view0"/>
            <field name="geo_repr">colored</field>
            <field eval="1" name="nb_class"/>
            <field name="attribute_field_id" ref="sl_asset.field_asset_location_company_id"/> 
            <field name="begin_color">#FF680A</field>
        </record>
                
        <record id="raster_layer_asset_locationmapbox" model="geoengine.raster.layer">
            <field name="raster_type">mapbox</field>
            <field name="mapbox_id">camptocamp.map-ok288g0c</field>
            <field name="name">Asset Location Spatial Mapbox</field>
            <field name="view_id" ref="ir_ui_view_asset_location_view0"/>
            <field eval="0" name="overlay"/>
        </record>
        <record id="raster_layer_asset_location_basic0" model="geoengine.raster.layer">
            <field name="raster_type">d_wms</field>
            <field name="name">Asset Location Spatial Basic</field>
            <field name="url">vmap0.tiles.osgeo.org/wms/vmap0</field>
            <field name="view_id" ref="ir_ui_view_asset_location_view0"/>
            <field eval="1" name="overlay"/>
        </record>
        

        
        <record id="sl_asset.location_asset_act" model="ir.actions.act_window">
            <field name="view_mode">tree,form,geoengine</field>
        </record>
    </data>
</openerp>
